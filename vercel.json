{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/leads",
      "dest": "/api/leads.js"
    },
    {
      "src": "/api/scrape-jobs",
      "dest": "/api/scrape-jobs.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/",
      "dest": "/dashboard.html"
    },
    {
      "src": "/scraper",
      "dest": "/index.html"
    },
    {
      "src": "/dashboard",
      "dest": "/dashboard.html"
    },
    {
      "src": "/email-templates",
      "dest": "/email-templates.html"
    },
    {
      "src": "/leads",
      "dest": "/leads.html"
    },
    {
      "src": "/settings", 
      "dest": "/settings.html"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dashboard.html"
    }
  ]
} 