{
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/leads",
      "destination": "/leads.html"
    },
    {
      "source": "/dashboard", 
      "destination": "/dashboard.html"
    },
    {
      "source": "/scraper",
      "destination": "/index.html"
    },
    {
      "source": "/email-templates",
      "destination": "/email-templates.html"
    },
    {
      "source": "/settings",
      "destination": "/settings.html"
    },
    {
      "source": "/",
      "destination": "/dashboard.html"
    }
  ]
} 