{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/test-leads",
      "dest": "/api/test-leads.js"
    },
    {
      "src": "/api/leads",
      "dest": "/api/leads.js"
    },
    {
      "src": "/api/scrape-jobs",
      "dest": "/api/scrape-jobs.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/",
      "dest": "/dashboard.html"
    },
    {
      "src": "/scraper",
      "dest": "/index.html"
    },
    {
      "src": "/dashboard",
      "dest": "/dashboard.html"
    },
    {
      "src": "/email-templates",
      "dest": "/email-templates.html"
    },
    {
      "src": "/leads",
      "dest": "/leads.html"
    },
    {
      "src": "/settings", 
      "dest": "/settings.html"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|html))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dashboard.html"
    }
  ]
} 